<h3 class="text-center">Cars</h3>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <% @cars.each do |car| %>
        <div class="card" style="background-color: lightgray;">
          <div class="card-description">
            <p><%= car.make %></p>
            <p><%= car.model %></p>
            <p><%= car.year %></p>
            <p><%= link_to "Delete", car_path(car), method: :delete, data: { confirm: "Do you want to delete?"}  %>
            </p>
          </div>
          <img class="card-user" style="background-image: url('<%= cl_image_path car.photo unless car.photo.blank?%>');">
        </div>
      <% end %>
      <div class = "form-row text-center">
        <div class="col-12">
        <%= link_to "Add a car", new_car_path, class: 'btn btn-primary btn-lg btn-block' %>
        </div>
      </div>
    </div>
  </div>
</div>
