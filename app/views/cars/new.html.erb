<h1 class="text-center">Add a new car</h1>

<div class="container">
    <% if @car.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @car.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <%= simple_form_for @car do |f| %>
        <%= f.input :make %>
        <%= f.input :model %>
        <%= f.input :year %>
        <%= f.input :license_plate %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn btn-primary' %>
        <%= link_to "Back home", root_path, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
