<h1>Add a new car</h1>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <%= simple_form_for @car do |f| %>
        <%= f.input :make %>
        <%= f.input :model %>
        <%= f.input :year %>
        <%= f.input :license_plate %>
        <%= f.button :submit, class: 'btn btn-primary' %>
        <%= link_to "Back home", root_path, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
