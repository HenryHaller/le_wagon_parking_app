<h1>Add a spot</h1>

<div class="container">
    <% if @spot.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @spot.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="row">
   <div class="col-md-8 col-md-offset-2">

     <%= simple_form_for @spot do |f| %>
       <%= f.input :site_name %>
       <%= f.input :address %>
       <%= f.input :hourly_rate %>
       <%= f.input :description %>
       <%= f.submit class: "btn btn-primary" %>
       <%= link_to "Back home", root_path, class: 'btn btn-danger' %>
     <% end %>
   </div>
 </div>
</div>


