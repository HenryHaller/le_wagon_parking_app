<div class="spotpagebanner" style="background-image: url('<%= image_path("parkingspot.jpg") %>">
  <h1 class="text-center">
    <% if @searching %>
      Book a Spot
    <% else %>
      Spots
    <% end %>
  </div>
</h1>
<div class="container">
  <div class="row">
    <div class = "form-row text-center">
      <% unless @searching %>
        <div class="col-12">
          <%= link_to "Add a New Spot", new_spot_path, class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
      <div id="map", style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>"> </div>
    </div>
  </div>
</div>
