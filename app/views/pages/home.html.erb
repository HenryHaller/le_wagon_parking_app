<div class="banner" style="background-image:linear-gradient(-200deg, rgba(0,90,168,0.7), 0%, rgba(10,50,61,0.4) 40%), url('<%= image_path("homeimage.jpg") %>');">
  <div class="banner-content">
    <h1>Spot.find</h1>
    <p>On demand parking near you</p>
    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      <%= simple_form_for :results, :url => "/results", method: "get" do |f| %>
        <%= f.input :begin, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :end, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :location, as: :string %>
        <%= f.button :submit, "Spot.all", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>